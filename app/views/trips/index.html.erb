<% content_for :title, "Trips" %>

<h1>Your Trips</h1>

<!-- This is a simple table to display the trips associated with the current user -->
<!-- It includes a link to create a new trip and a list of existing trips with details -->
<!-- The table includes columns for the trip name, dates, currency, owner, and a link to view details -->
<% if @trips.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dates</th>
        <th>Currency</th>
        <th>Owner</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= link_to trip.name, trip_path(trip) %></td>
          <td>
            <%= trip.start_date.strftime("%b %-d, %Y") %> –
            <%= trip.end_date.strftime("%b %-d, %Y") %>
          </td>
          <td><%= trip.currency %></td>
          <td><%= trip.user.email %></td>
          <td>
            <%= link_to "Details", trip_path(trip), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You don’t have any trips yet.</p>
<% end %>

<%= link_to "New Trip", new_trip_path, class: "btn btn-primary" %>
