
<!-- This partial is used to render a form for creating or editing a trip. It includes error handling and displays the form fields. -->
<%= form_with(model: trip) do |form| %>
  <% if trip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- This is a form for creating or editing a trip. It includes fields for the trip name, start date, end date, and currency. -->
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    <br>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>

    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
    
    <%= form.label :currency, style: "display: block" %>
    <%= form.select :currency, ['USD', 'EUR', 'GBP', 'INR', 'JPY'], {}, class: "form-control" %>
    <br>
    <%= form.submit %>
  </div>
<% end %>
